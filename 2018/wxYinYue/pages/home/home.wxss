.home{
  height: 100%;
  width: 100%;
}
/* search部分 */
.home .home-search{
  height: 80rpx;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, .3);
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #fff;
}
.home .home-search .home-search-location{
  height: 100%;
  font-size: 32rpx;
}
.home .home-search .home-search-location icon{
  font-size: 38rpx;
  padding-right: 8rpx;
}
.home .home-search .home-search-input{
  width: 75%;
  height: 70%;
  background-color: #fff;
  border-radius: 26rpx;
}
.home .home-search .home-search-place{
  padding-left: 34rpx;
  font-size: 26rpx;
  color: #ced0dd;
}

.home .home-content{
  height: 100%;
  width: 100%;
  color: #5c5c5f;
}

/* swiper部分 */
.home-content .home-content-swiper{
  width: 100%;
  height: 350rpx;
  background-color: #5c5c5f;
}
.home-content .home-content-swiper swiper-item image{
  width: 100%;
}
/* nav部分 */
.home .home-content .home-content-nav{
  width: 100%;
  margin-top: 2%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.home .home-content .home-content-nav-item{
  width: 49.7%;
  height: 118rpx;
  margin-bottom: 0.6%;
  background-color: #fff;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.home .home-content .home-content-nav-item>view{
  width: 100rpx;
  height: 94rpx;
  margin-left: 44rpx;
  margin-right: 20rpx;
}
.home .home-content .home-content-nav-item>view>image{
  width: 100%;
  height: 100%;
}

/* 新品首发 */
.home-content-main{
  width: 100%;
}
.home-content-main>view{
  width: 100%;
  margin-top: 3%;
  background-color: #fff;
  padding: 0 3%;
}
.home-content-main .content-head{
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.home-content-main .content-head-left{
  display: flex;
  color: #ced0dd;
}
.home-content-main .content-head-title{
  color: #ff4683;
}
.home-content-main .new-main{
  width: 100%;
  height: 33%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.home-content-main .content-item{
  width: 33.3%;
  height: 300rpx;
  margin-bottom: 5%;
}
.home-content-main .content-img{
  width: 220rpx;
  height: 220rpx;
}
.home-content-main .content-txt{
  color: #201f1f;
  font-size: 26rpx;
  overflow : hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 热门艺人 */
.home-content-main .active{
  opacity: 1 !important;
  transform: scale(1.3);
}
.home-content-main .hot-nav{
  width: 100%;
  height: 194rpx;
  overflow-y: hidden;
  white-space: nowrap;
}
.home-content-main ::-webkit-scrollbar {
    width: 0px;
}
.home-content-main ::-webkit-scrollbar {
    display: none;
}
.home-content-main .hot-nav image{
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: 20rpx;
  opacity: .5;
}
.home-content-main .hot-name{
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #ff4683;
  text-align: center;
}
.home-content-main .hot-main{
  display: flex;
  flex-wrap: wrap;
}