page{
  background-color: #fff;
}
.find{
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 0 30rpx;
}
.find-search{
  height: 100rpx;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #333;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 26rpx;
}
.find-search-location{
  height: 100%;
  font-size: 26rpx;
}
.find-search-input{
  width: 75%;
  height: 70%;
  background-color: #f0f1f5;
  border-radius: 32rpx;
  padding: 0 34rpx;
  position: relative;
}
.find-search-input-icon{
  position: absolute;
  right: 2%;
  top: -20%;
  font-size: 28rpx;
  color:#ced0dd;
  width: 10%;
  height: 120%;
  display: flex;
  justify-content: center;
}
.find-search-place{
  font-size: 26rpx;
  color: #ced0dd;
  z-index: 999;
}
.find-content{
  padding-top: 100rpx;
  font-size: 28rpx;
}
.find-content-hot{
  margin-top: 3%;
  border-top: 1px dotted #ccc;
}
.find-content-title{
  margin-top: 34rpx;
  color: #ff4683;
  font-size: 30rpx;
}
.find-content-hot-item{
  display: inline-block;
  padding: 18rpx 28rpx;
  border: 1px solid #000;
  border-radius: 50rpx;
  color: #000;
  margin: 10rpx;
}
.find-content-history-item{
  height: 72rpx;
  line-height: 72rpx;
  margin: 20rpx 30rpx 30rpx;
  border-bottom: 1px dashed #f4f4f8;
  display: flex;
  align-items: center;
}
.find-content-history-item-text{
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: keep-all;
}
.find-content-history-item>image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 3%;
}
.find-content-history-item>icon{
  width: 10%;
  font-size: 26rpx;
}
.find-content-deleteall{
  margin: 0 auto;
  width: 268rpx;
  height: 60rpx;
  border: 1px solid #bbb;
  border-radius: .8rem;
  color: #bbb;
  display: flex;
  align-items: center;
  justify-content: center;
}